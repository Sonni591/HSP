<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project HSP - HPPLAN">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="${basedir}/../build/deploy/bundles/HPPLAN.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="de.oth.hsp.hpplan.HPPLANMain"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${basedir}/../bin"/>
            <zipfileset excludes="META-INF/*.SF" src="/Applications/Eclipse Java 8/plugins/org.eclipse.fx.ide.css.jfx8_1.2.0.201501301049.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${basedir}/../lib/antlr-runtime-4.5.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${basedir}/../lib/controlsfx-8.20.9.jar"/>
        </jar>
    </target>
</project>
